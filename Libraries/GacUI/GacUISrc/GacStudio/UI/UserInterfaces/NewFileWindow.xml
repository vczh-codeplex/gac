<?xml version="1.0" encoding="utf-8"?>
<Instance ref.Class="ui::NewFileWindow">
  <ref.Parameter Name="ViewModel" Class="vm::IStudioModel"/>
  <Window Text="New File" ClientSize="x:640 y:480">
    <att.BoundsComposition-set PreferredMinSize="x:640 y:480"/>

    <Table AlignmentToParent="left:0 top:0 right:0 bottom:0" CellPadding="5">
      <att.Rows>
        <CellOption>composeType:MinSize</CellOption>
        <CellOption>composeType:Percentage percentage:1.0</CellOption>
        <CellOption>composeType:MinSize</CellOption>
        <CellOption>composeType:MinSize</CellOption>
        <CellOption>composeType:MinSize</CellOption>
      </att.Rows>
      <att.Columns>
        <CellOption>composeType:MinSize</CellOption>
        <CellOption>composeType:Percentage percentage:1.0</CellOption>
        <CellOption>composeType:MinSize</CellOption>
        <CellOption>composeType:MinSize</CellOption>
      </att.Columns>

      <Cell Site="row:0 column:0" Margin="left:4 top:4 right:4 bottom:4">
        <Label Text="Select File Template to Create:"/>
      </Cell>

      <Cell Site="row:1 column:0">
        <TreeView ref.Name="treeViewProjectTemplate" HorizontalAlwaysVisible="false" VerticalAlwaysVisible="false">
          <att.BoundsComposition-set AlignmentToParent="left:0 top:0 right:0 bottom:0"/>
          <att.Nodes>
            <TreeNode Text="All" Expanding="true" Image-uri="res://ProjectImages/AllSmall.png">
              <TreeNode Text="GacUI Resource" Image-uri="res://ProjectImages/DialogSmall.png">
                <att.tag>
                  <String>GACUI_RESOURCE_PROJECT</String>
                </att.tag>
              </TreeNode>
              <TreeNode Text="Parser" Image-uri="res://ProjectImages/ParserSmall.png">
                <att.tag>
                  <String>PARSER_PROJECT</String>
                </att.tag>
              </TreeNode>
            </TreeNode>
          </att.Nodes>
        </TreeView>
      </Cell>
      <Cell Site="row:1 column:1">
        <ListView ref.Name="listViewFileTemplate" View="BigIcon" HorizontalAlwaysVisible="false" VerticalAlwaysVisible="false">
          <att.BoundsComposition-set AlignmentToParent="left:0 top:0 right:0 bottom:0"/>
          <att.Items>
            <ListViewItem text="Window Resource" largeImage-uri="res://FileImages/Dialog.png">
              <att.tag>
                <String>GACUI_WINDOW_RESOURCE_FILE</String>
              </att.tag>
            </ListViewItem>
            <ListViewItem text="Control Resource" largeImage-uri="res://FileImages/Control.png">
              <att.tag>
                <String>GACUI_CONTROL_RESOURCE_FILE</String>
              </att.tag>
            </ListViewItem>
            <ListViewItem text="View Model Resource" largeImage-uri="res://FileImages/Class.png">
              <att.tag>
                <String>GACUI_VIEWMODEL_RESOURCE_FILE</String>
              </att.tag>
            </ListViewItem>
            <ListViewItem text="Image Resource" largeImage-uri="res://FileImages/Image.png">
              <att.tag>
                <String>GACUI_IMAGE_RESOURCE_FILE</String>
              </att.tag>
            </ListViewItem>
            <ListViewItem text="Text Resource" largeImage-uri="res://FileImages/Document.png">
              <att.tag>
                <String>GACUI_TEXT_RESOURCE_FILE</String>
              </att.tag>
            </ListViewItem>
            <ListViewItem text="Rich Text Resource" largeImage-uri="res://FileImages/RichDocument.png">
              <att.tag>
                <String>GACUI_RICHTEXT_RESOURCE_FILE</String>
              </att.tag>
            </ListViewItem>
            <ListViewItem text="XML Resource" largeImage-uri="res://FileImages/XmlDocument.png">
              <att.tag>
                <String>GACUI_XML_RESOURCE_FILE</String>
              </att.tag>
            </ListViewItem>
            <ListViewItem text="Parser" largeImage-uri="res://FileImages/Parser.png">
              <att.tag>
                <String>PARSER_FILE</String>
              </att.tag>
            </ListViewItem>
            <ListViewItem text="Parser Test" largeImage-uri="res://FileImages/Parser.png">
              <att.tag>
                <String>PARSER_TEST_FILE</String>
              </att.tag>
            </ListViewItem>
          </att.Items>
        </ListView>
      </Cell>
      <Cell Site="row:1 column:2 rowSpan:1 columnSpan:2">
        <DocumentViewer EditMode="Selectable" HorizontalAlwaysVisible="false" VerticalAlwaysVisible="false">
          <att.BoundsComposition-set AlignmentToParent="left:0 top:0 right:0 bottom:0"/>
          <att.Text>This is the file description.</att.Text>
        </DocumentViewer>
      </Cell>

      <Cell Site="row:2 column:0" Margin="left:4 top:4 right:4 bottom:4">
        <Label Text="Project Name:"/>
      </Cell>
      <Cell Site="row:2 column:1 rowSpan:1 columnSpan:3">
        <SinglelineTextBox ref.Name="textBoxProjectName" Text="MyFile">
          <att.BoundsComposition-set AlignmentToParent="left:0 top:0 right:0 bottom:0"/>
        </SinglelineTextBox>
      </Cell>

      <Cell Site="row:3 column:0" Margin="left:4 top:4 right:4 bottom:4">
        <Label Text="Location:"/>
      </Cell>
      <Cell Site="row:3 column:1 rowSpan:1 columnSpan:3">
        <SinglelineTextBox ref.Name="textBoxLocation" Readonly="true">
          <att.BoundsComposition-set AlignmentToParent="left:0 top:0 right:0 bottom:0"/>
        </SinglelineTextBox>
      </Cell>

      <Cell Site="row:4 column:2">
        <Button ref.Name="buttonCreate" Text="Create" Enabled="false" ev.Clicked="buttonCreate_Clicked">
          <att.BoundsComposition-set AlignmentToParent="left:-1 top:0 right:0 bottom:0" PreferredMinSize="x:100 y:24"/>
        </Button>
      </Cell>
      <Cell Site="row:4 column:3">
        <Button ref.Name="buttonCancel" Text="Cancel" ev.Clicked="buttonCancel_Clicked">
          <att.BoundsComposition-set AlignmentToParent="left:-1 top:0 right:0 bottom:0" PreferredMinSize="x:100 y:24"/>
        </Button>
      </Cell>
    </Table>
  </Window>
</Instance>
