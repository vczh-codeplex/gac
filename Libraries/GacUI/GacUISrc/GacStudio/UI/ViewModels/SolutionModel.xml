<?xml version="1.0" encoding="utf-8"?>
<Schemas>
  <Interface ref.Class="vm::ISolutionItemModel">
    <Property Name="Image" Type="presentation::GuiImageData^" Readonly="true" Observable="true"/>
    <Property Name="Name" Type="string" Readonly="true" Observable="true"/>
    <Property Name="Children" Type="description::IValueObservableList^" Readonly="true"/>
    <Property Name="IsFileItem" Type="bool" Readonly="true"/>
    <Property Name="FilePath" Type="string" Readonly="true" Observable="true"/>
    <Property Name="IsSaved" Type="bool" Readonly="true" Observable="true"/>
    
    <Property Name="ErrorCount" Type="int" Readonly="true" Observable="true"/>
    <Method Name="GetErrorText" Type="string">
      <Argument Name="index" Type="int"/>
    </Method>

    <Method Name="OpenFileItem" Type="bool">
    </Method>
    <Method Name="SaveFileItem" Type="bool">
    </Method>
  </Interface>
  
  <Interface ref.Class="vm::IFileFactoryModel">
    <Property Name="Image" Type="presentation::GuiImageData^" Readonly="true"/>
    <Property Name="SmallImage" Type="presentation::GuiImageData^" Readonly="true"/>
    <Property Name="Name" Type="string" Readonly="true"/>
    <Property Name="Category" Type="string" Readonly="true"/>
    <Property Name="Description" Type="string" Readonly="true"/>
    <Property Name="Id" Type="string" Readonly="true"/>
    <Property Name="DefaultFileExt" Type="string" Readonly="true"/>

    <Method Name="GenerateFile" Type="bool">
      <Argument name="project" Type="vm::ISolutionItemModel^"/>
      <Argument Name="filePath" Type="string"/>
    </Method>
  </Interface>

  <Interface ref.Class="vm::IProjectFactoryModel">
    <Property Name="Image" Type="presentation::GuiImageData^" Readonly="true"/>
    <Property Name="SmallImage" Type="presentation::GuiImageData^" Readonly="true"/>
    <Property Name="Name" Type="string" Readonly="true"/>
    <Property Name="Description" Type="string" Readonly="true"/>
    <Property Name="Id" Type="string" Readonly="true"/>
    <Property Name="Children" Type="vm::IProjectFactoryModel^{}" Readonly="true"/>
  </Interface>

  <Interface ref.Class="vm::IFileModel" Parent="vm::ISolutionItemModel">
    <Method Name="GetFileFactory" Type="vm::IFileFactoryModel^"/>
  </Interface>

  <Interface ref.Class="vm::IFolderModel" Parent="vm::ISolutionItemModel">
  </Interface>

  <Interface ref.Class="vm::IProjectModel" Parent="vm::ISolutionItemModel">
    <Method Name="GetProjectFactory" Type="vm::IProjectFactoryModel^"/>
    <Method Name="OpenProject" Type="bool"/>
    <Method Name="SaveProject" Type="bool">
      <Argument Name="saveContainingFiles" Type="bool"/>
    </Method>
    <Method Name="NewProject" Type="bool"/>
  </Interface>

  <Interface ref.Class="vm::ISolutionModel" Parent="vm::ISolutionItemModel">
    <Method Name="OpenSolution" Type="bool"/>
    <Method Name="SaveSolution" Type="bool">
      <Argument Name="saveContainingProjects" Type="bool"/>
    </Method>
    <Method Name="NewSolution" Type="bool"/>
    <Method Name="AddProject" Type="bool">
      <Argument Name="project" Type="vm::IProjectModel^"/>
    </Method>
  </Interface>

  <Interface ref.Class="vm::IStudioModel">
    <Property Name="ProjectModels" Type="vm::IProjectFactoryModel^{}" Readonly="true"/>
    <Property Name="FileModels" Type="system::ObservableList^" Readonly="true"/>
    <Property Name="FileFilters" Type="vm::IProjectFactoryModel^" Readonly="true"/>
    
    <Property Name="FileCategory" Type="string"/>
    <Property Name="OpeningSolution" Type="ISolutionItemModel^" Readonly="true"/>
    <Property Name="OpeningSolutionPath" Type="string" Readonly="true"/>
    <Property Name="HasOpeningSolution" Type="bool" Readonly="true" Observable="true"/>

    <Method Name="GetProjectFactory" Type="vm::IProjectFactoryModel^">
      <Argument Name="id" Type="string"/>
    </Method>
    <Method Name="GetFileFactory" Type="vm::IFileFactoryModel^">
      <Argument Name="id" Type="string"/>
    </Method>

    <Method Name="OpenSolution" Type="bool">
      <Argument Name="filePath" Type="string"/>
    </Method>
    <Method Name="SaveSolution" Type="bool">
    </Method>
    <Method Name="NewSolution" Type="bool">
      <Argument Name="filePath" Type="string"/>
    </Method>
    <Method Name="CloseSolution" Type="bool">
    </Method>
    <Method Name="AddProject" Type="bool">
      <Argument Name="projectFactory" Type="vm::IProjectFactoryModel^"/>
      <Argument Name="filePath" Type="string"/>
    </Method>
    
    <Method Name="OpenBrowser" Type="void">
      <Argument Name="url" Type="string"/>
    </Method>
    <Method Name="PromptError" Type="void">
      <Argument Name="message" Type="string"/>
    </Method>
  </Interface>
</Schemas>