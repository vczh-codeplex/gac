<?xml version="1.0" encoding="utf-8"?>
<Resource>
  <Folder name="GacGenConfig">
    <Text name="Include">..\..\..\Public\Source\GacUIReflection.h</Text>
    <Text name="Name">GacStudioUI</Text>
    <Text name="Prefix">Gs</Text>
  </Folder>
  <Folder name="CommandImages" content="Link">CommandImages\Folder.xml</Folder>
  <Folder name="ProjectImages" content="Link">ProjectImages\Folder.xml</Folder>
  <Folder name="UI">
    <Instance name="MainWindowResource">
      <Instance ref.Class="gacstudio::user_interface::MainWindow">
        <Window Text="GacStudio 1.0 (http://gaclib.net)" ClientSize="x:800 y:600">
          <att.BoundsComposition-set PreferredMinSize="x:640 y:480"/>

          <ToolstripCommand ref.Name="commandFileNewProject" Text="New Project..." Image-uri="res://CommandImages/NewProject.png" ShortcutBuilder="Ctrl+Shift+N">
            <ev.Executed>commandFileNewProject_Executed</ev.Executed>
          </ToolstripCommand>
          <ToolstripCommand ref.Name="commandFileNewFile" Text="New File..." Image-uri="res://CommandImages/New.png" ShortcutBuilder="Ctrl+N">
            <ev.Executed>commandFileNewFile_Executed</ev.Executed>
          </ToolstripCommand>
          <ToolstripCommand ref.Name="commandFileOpenProject" Text="New Project..." Image-uri="res://CommandImages/Open.png" ShortcutBuilder="Ctrl+Shift+O">
            <ev.Executed>commandFileOpenProject_Executed</ev.Executed>
          </ToolstripCommand>
          <ToolstripCommand ref.Name="commandFileOpenFile" Text="New File..." Image-uri="res://CommandImages/Open.png" ShortcutBuilder="Ctrl+O">
            <ev.Executed>commandFileOpenFile_Executed</ev.Executed>
          </ToolstripCommand>
          <ToolstripCommand ref.Name="commandFileSave" Text="Save" Image-uri="res://CommandImages/Save.png" ShortcutBuilder="Ctrl+S">
            <ev.Executed>commandFileSave_Executed</ev.Executed>
          </ToolstripCommand>
          <ToolstripCommand ref.Name="commandFileSaveAll" Text="Save All" Image-uri="res://CommandImages/SaveAll.png" ShortcutBuilder="Ctrl+Shift+S">
            <ev.Executed>commandFileSaveAll_Executed</ev.Executed>
          </ToolstripCommand>
          <ToolstripCommand ref.Name="commandFileExit" Text="Exit">
            <ev.Executed>commandFileExit_Executed</ev.Executed>
          </ToolstripCommand>

          <Table AlignmentToParent="left:0 top:0 right:0 bottom:0">
            <att.Rows>
              <CellOption>composeType:MinSize</CellOption>
              <CellOption>composeType:MinSize</CellOption>
              <CellOption>composeType:Percentage percentage:1.0</CellOption>
            </att.Rows>
            <att.Columns>
              <CellOption>composeType:Percentage percentage:1.0</CellOption>
            </att.Columns>

            <Cell Site="row:0 column:0" InternalMargin="left:1 right:1">
              <ToolstripMenuBar>
                <att.BoundsComposition-set AlignmentToParent="left:0 top:0 right:0 bottom:0"/>
                <MenuBarButton Text="File">
                  <att.SubMenu-set>
                    <MenuItemButton Text="New" Image-uri="res://CommandImages/New.png">
                      <att.SubMenu-set>
                        <MenuItemButton Command-ref="commandFileNewProject"/>
                        <MenuItemButton Command-ref="commandFileNewFile"/>
                      </att.SubMenu-set>
                    </MenuItemButton>
                    <MenuItemButton Text="Open" Image-uri="res://CommandImages/Open.png">
                      <att.SubMenu-set>
                        <MenuItemButton Command-ref="commandFileOpenProject"/>
                        <MenuItemButton Command-ref="commandFileOpenFile"/>
                      </att.SubMenu-set>
                    </MenuItemButton>
                    <MenuItemButton Command-ref="commandFileSave"/>
                    <MenuItemButton Command-ref="commandFileSaveAll"/>
                    <MenuSplitter/>
                    <MenuItemButton Command-ref="commandFileExit"/>
                  </att.SubMenu-set>
                </MenuBarButton>
              </ToolstripMenuBar>
            </Cell>

            <Cell Site="row:1 column:0" InternalMargin="left:1 top:1 right:1 bottom:1">
              <ToolstripToolBar>
                <att.BoundsComposition-set AlignmentToParent="left:0 top:0 right:0 bottom:0"/>
                <ToolstripSplitButton Command-ref="commandFileNewProject">
                  <att.SubMenu-set>
                    <MenuItemButton Command-ref="commandFileNewProject"/>
                    <MenuItemButton Command-ref="commandFileNewFile"/>
                  </att.SubMenu-set>
                </ToolstripSplitButton>
                <ToolstripSplitButton Command-ref="commandFileOpenProject">
                  <att.SubMenu-set>
                    <MenuItemButton Command-ref="commandFileOpenProject"/>
                    <MenuItemButton Command-ref="commandFileOpenFile"/>
                  </att.SubMenu-set>
                </ToolstripSplitButton>
                <ToolstripButton Command-ref="commandFileSave"/>
                <ToolstripButton Command-ref="commandFileSaveAll"/>
              </ToolstripToolBar>
            </Cell>

            <Cell Site="row:2 column:0">
              <Tab>
                <att.BoundsComposition-set AlignmentToParent="left:0 top:0 right:0 bottom:0"/>
                <TabPage Text="Sample Tab Page"/>
              </Tab>
            </Cell>
          </Table>
        </Window>
      </Instance>
    </Instance>

    <Instance name="NewProjectWindowResource">
      <Instance ref.Class="gacstudio::user_interface::NewProjectWindow">
        <Window Text="New Project" ClientSize="x:520 y:400">
          <att.BoundsComposition-set PreferredMinSize="x:520 y:400"/>

          <Table AlignmentToParent="left:0 top:0 right:0 bottom:0" CellPadding="5">
            <att.Rows>
              <CellOption>composeType:MinSize</CellOption>
              <CellOption>composeType:Percentage percentage:1.0</CellOption>
              <CellOption>composeType:MinSize</CellOption>
              <CellOption>composeType:MinSize</CellOption>
              <CellOption>composeType:MinSize</CellOption>
              <CellOption>composeType:MinSize</CellOption>
              <CellOption>composeType:MinSize</CellOption>
            </att.Rows>
            <att.Columns>
              <CellOption>composeType:MinSize</CellOption>
              <CellOption>composeType:Percentage percentage:1.0</CellOption>
              <CellOption>composeType:MinSize</CellOption>
              <CellOption>composeType:MinSize</CellOption>
            </att.Columns>

            <Cell Site="row:0 column:0" Margin="left:4 top:4 right:4 bottom:4">
              <Label Text="Select Project Template:"/>
            </Cell>

            <Cell Site="row:1 column:0 rowSpan:1 columnSpan:2">
              <ListView ref.Name="listViewProjectTemplate" View="BigIcon" HorizontalAlwaysVisible="false" VerticalAlwaysVisible="false">
                <att.BoundsComposition-set AlignmentToParent="left:0 top:0 right:0 bottom:0"/>
                <att.Items>
                  <ListViewItem text="GacUI Resource" largeImage-uri="res://ProjectImages/Dialog.png"/>
                  <ListViewItem text="Parser" largeImage-uri="res://ProjectImages/Parser.png"/>
                </att.Items>
              </ListView>
            </Cell>
            <Cell Site="row:1 column:2 rowSpan:1 columnSpan:2">
              <DocumentViewer EditMode="Selectable" HorizontalAlwaysVisible="false" VerticalAlwaysVisible="false">
                <att.BoundsComposition-set AlignmentToParent="left:0 top:0 right:0 bottom:0"/>
                <att.Text>This is the project description.</att.Text>
              </DocumentViewer>
            </Cell>

            <Cell Site="row:2 column:0" Margin="left:4 top:4 right:4 bottom:4">
              <Label Text="Project Name:"/>
            </Cell>
            <Cell Site="row:2 column:1 rowSpan:1 columnSpan:3">
              <SinglelineTextBox ref.Name="textBoxProjectName" Text="MyProject">
                <att.BoundsComposition-set AlignmentToParent="left:0 top:0 right:0 bottom:0"/>
              </SinglelineTextBox>
            </Cell>

            <Cell Site="row:3 column:0" Margin="left:4 top:4 right:4 bottom:4">
              <Label Text="Location:"/>
            </Cell>
            <Cell Site="row:3 column:1 rowSpan:1 columnSpan:2">
              <SinglelineTextBox ref.Name="textBoxLocation">
                <att.BoundsComposition-set AlignmentToParent="left:0 top:0 right:0 bottom:0"/>
              </SinglelineTextBox>
            </Cell>
            <Cell Site="row:3 column:3">
              <Button ref.Name="buttonBrowse" Text="Browse..." ev.Clicked="buttonBrowse_Clicked">
                <att.BoundsComposition-set AlignmentToParent="left:-1 top:0 right:0 bottom:0" PreferredMinSize="x:100 y:24"/>
              </Button>
            </Cell>

            <Cell Site="row:4 column:0" Margin="left:4 top:4 right:4 bottom:4">
              <Label Text="Solution:"/>
            </Cell>
            <Cell Site="row:4 column:1 rowSpan:1 columnSpan:3">
              <ComboBox ref.Name="comboSolution" SelectedIndex="1">
                <att.BoundsComposition-set AlignmentToParent="left:0 top:0 right:0 bottom:0"/>
                <att.ListControl>
                  <TextList HorizontalAlwaysVisible="false" VerticalAlwaysVisible="false">
                    <att.Items>
                      <TextItem Text="Create New Solution"/>
                      <TextItem Text="Add To Solution"/>
                    </att.Items>
                  </TextList>
                </att.ListControl>
              </ComboBox>
            </Cell>

            <Cell Site="row:5 column:0" Margin="left:4 top:4 right:4 bottom:4">
              <Label Text="Solution Name:"/>
            </Cell>
            <Cell Site="row:5 column:1 rowSpan:1 columnSpan:3">
              <SinglelineTextBox ref.Name="textBoxSolutionName" Text="MySolution">
                <att.BoundsComposition-set AlignmentToParent="left:0 top:0 right:0 bottom:0"/>
              </SinglelineTextBox>
            </Cell>

            <Cell Site="row:6 column:2">
              <Button ref.Name="buttonCreate" Text="Create" ev.Clicked="buttonCreate_Clicked">
                <att.BoundsComposition-set AlignmentToParent="left:-1 top:0 right:0 bottom:0" PreferredMinSize="x:100 y:24"/>
              </Button>
            </Cell>
            <Cell Site="row:6 column:3">
              <Button ref.Name="buttonCancel" Text="Cancel" ev.Clicked="buttonCancel_Clicked">
                <att.BoundsComposition-set AlignmentToParent="left:-1 top:0 right:0 bottom:0" PreferredMinSize="x:100 y:24"/>
              </Button>
            </Cell>
          </Table>
        </Window>
      </Instance>
    </Instance>
  </Folder>
</Resource>